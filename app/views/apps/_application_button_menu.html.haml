%ul.application-button-menu
  %li
    .settings-container{ data: { toggle: { class: 'expanded'} } }
      %ul.settings-menu
        %li
          = link_to 'Save as PMX Template', new_template_path(app_id: app.id), class: 'link template no-event-propagation', title: 'save template'
        %li
          = link_to 'Save As Compose YAML', '#', title: 'export', class: 'link export', data: { composePath: compose_yml_app_path(app.id) }
        %li
          = link_to 'Deploy to Target', select_deployment_targets_path(resource_id: app.id, resource_type: 'App'), class: 'link deploy select-deployment-target', title: 'save template'
        %li
          = link_to 'Rebuild App', rebuild_app_path(app.id), method: :put, title: 'rebuild', class: 'link reload'
        %li
          = link_to 'Delete App', app_path(app.id), method: :delete, title: 'delete', class: 'delete'
